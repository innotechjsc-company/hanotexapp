{
  "name": "cms",
  "version": "1.0.0",
  "description": "A blank template to get started with Payload 3.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "NODE_OPTIONS=\"--no-deprecation --max-old-space-size=8000\" next build",
    "dev": "NODE_ENV=development NODE_OPTIONS=--no-deprecation bun server.cjs",
    "start": "NODE_ENV=production NODE_OPTIONS=--no-deprecation bun server.cjs",
    "dev:next": "NODE_OPTIONS=--no-deprecation next dev -p 4000",
    "devsafe": "rm -rf .next && NODE_ENV=development NODE_OPTIONS=--no-deprecation bun server.cjs",
    "generate:importmap": "NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "NODE_OPTIONS=--no-deprecation payload generate:types",
    "lint": "NODE_OPTIONS=--no-deprecation next lint",
    "payload": "NODE_OPTIONS=--no-deprecation payload",
    "test": "bun run test:int && bun run test:e2e",
    "test:e2e": "NODE_OPTIONS=\"--no-deprecation --no-experimental-strip-types\" bunx playwright test",
    "test:int": "NODE_OPTIONS=--no-deprecation vitest run --config ./vitest.config.mts",
    "pm2:dev": "pm2 start ecosystem.config.cjs --env development",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:reload": "pm2 reload ecosystem.config.cjs",
    "pm2:delete": "pm2 delete ecosystem.config.cjs",
    "pm2:logs": "pm2 logs cms-dev",
    "pm2:status": "pm2 status",
    "pm2:monit": "pm2 monit",
    "seed:tech:dry": "bun seed-technologies.cjs --dry-run",
    "seed:tech": "bun seed-technologies.cjs"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "3.55.1",
    "@payloadcms/db-postgres": "3.55.1",
    "@payloadcms/next": "3.55.1",
    "@payloadcms/payload-cloud": "3.55.1",
    "@payloadcms/richtext-lexical": "3.55.1",
    "@payloadcms/ui": "3.55.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "next": "15.4.4",
    "payload": "3.55.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.4",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "prettier": "^3.4.2",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  },
  "engines": {
    "node": "^18.20.2 || >=20.9.0",
    "bun": ">=1.1.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "bun@1.2.20"
}
